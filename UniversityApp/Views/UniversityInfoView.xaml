<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniversityApp.Views.UniversityInfoView">
    <Frame BorderColor="Black " CornerRadius="8">
        <VerticalStackLayout Spacing="20">
            <HorizontalStackLayout Spacing="20">
                <Image Source="university.png" HeightRequest="100" />


                <VerticalStackLayout Spacing="10">
                    <Label FontSize="Large" Text="University Name" x:Name="UniversityName"/>
                    <Label FontSize="Medium" Text="University Webiste" TextColor="#3E8EED" x:Name="UniversitySite"/>
                </VerticalStackLayout>

            </HorizontalStackLayout>
        </VerticalStackLayout>

    </Frame>
</ContentView>
