<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniversityApp.MainPage">

    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="20">
            <Label Text="Find Universities" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <Entry x:Name="CountryName" Placeholder="Enter your Country" HorizontalOptions="FillAndExpand" />

            <Button x:Name="searchBtn" Text="Search" Clicked="SearchUniversity" HorizontalOptions="FillAndExpand" />

            <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="#512BD4" />

            <ScrollView>
                <StackLayout x:Name="Container" Spacing="10"></StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
